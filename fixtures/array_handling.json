{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/invopop/jsonschema/array-handler",
  "$ref": "#/$defs/ArrayHandler",
  "$defs": {
    "ArrayHandler": {
      "properties": {
        "min_len": {
          "items": {
            "type": "string",
            "minLength": 2
          },
          "type": "array",
          "const": [
            "foo",
            "bar"
          ],
          "default": [
            "qwerty"
          ]
        },
        "min_val": {
          "items": {
            "type": "number",
            "minimum": 2.5
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "min_len",
        "min_val"
      ]
    }
  }
}