{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/invopop/jsonschema/pattern-equals-test",
  "$ref": "#/$defs/PatternEqualsTest",
  "$defs": {
    "PatternEqualsTest": {
      "properties": {
        "WithEquals": {
          "type": "string",
          "pattern": "foo=bar"
        },
        "WithEqualsAndCommas": {
          "type": "string",
          "pattern": "foo,=bar"
        },
        "WithEqualsArray": {
          "items": {
            "type": "string",
            "pattern": "foo=bar"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "WithEquals",
        "WithEqualsAndCommas",
        "WithEqualsArray"
      ]
    }
  }
}