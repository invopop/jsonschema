{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/invopop/jsonschema/pattern-test",
  "$ref": "#/$defs/PatternTest",
  "$defs": {
    "PatternTest": {
      "properties": {
        "with_pattern": {
          "type": "string",
          "maxLength": 50,
          "minLength": 1,
          "pattern": "[0-9]{1,4}"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "with_pattern"
      ]
    }
  }
}