{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/kubeark/jsonschema/expression",
  "$ref": "#/$defs/Expression",
  "$defs": {
    "Expression": {
      "properties": {
        "value": {
          "type": "integer",
          "foo": "bar=='baz'"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "value"
      ]
    }
  }
}